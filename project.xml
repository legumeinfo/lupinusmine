<project type="bio">
  <property name="target.model" value="genomic"/>
  <property name="common.os.prefix" value="common"/>
  <property name="intermine.properties.file" value="lupinmine.properties"/>
  <property name="default.intermine.properties.file" location="../default.intermine.integrate.properties"/>
  <sources>

    <!-- Lupinus/albus/about_this_collection -->
    <source name="Lupinus-albus-description" type="lis-description" dump="true" >
      <property name="dataSetName" value="Lupinus/albus/about_this_collection" />
      <property name="dataSetUrl" value="https://data.legumeinfo.org/Lupinus/albus/about_this_collection/" />
      <property name="dataSetDescription" value="Lupinus albus organism and strain information." />
      <property name="src.data.dir" location="/data/v2/Lupinus/albus/about_this_collection" />
    </source>
    <!-- Lupinus/angustifolius/about_this_collection -->
    <source name="Lupinus-angustifolius-description" type="lis-description" dump="true" >
      <property name="dataSetName" value="Lupinus/angustifolius/about_this_collection" />
      <property name="dataSetUrl" value="https://data.legumeinfo.org/Lupinus/angustifolius/about_this_collection/" />
      <property name="dataSetDescription" value="Lupinus angustifolius organism and strain information." />
      <property name="src.data.dir" location="/data/v2/Lupinus/angustifolius/about_this_collection" />
    </source>

    <!-- Lupinus/albus/genomes/Amiga.gnm1.F4NR -->
    <source name="Amiga.gnm1.F4NR" type="lis-fasta" dump="true">
      <property name="dataSetUrl" value="https://data.legumeinfo.org/Lupinus/albus/genomes/Amiga.gnm1.F4NR/" />
      <property name="lis-fasta.className" value="org.intermine.model.bio.Chromosome" />
      <property name="lis-fasta.includes" value="README.Amiga.gnm1.F4NR.yml,lupal.Amiga.gnm1.F4NR.genome_main.fna.gz" />
      <property name="src.data.dir" location="/data/v2/Lupinus/albus/genomes/Amiga.gnm1.F4NR"/>
    </source>
    <!-- Lupinus/angustifolius/genomes/Tanjil.gnm1.Qq0N -->
    <source name="Tanjil.gnm1.Qq0N" type="lis-fasta" dump="true">
      <property name="dataSetUrl" value="https://data.legumeinfo.org/Lupinus/angustifolius/genomes/Tanjil.gnm1.Qq0N/" />
      <property name="lis-fasta.className" value="org.intermine.model.bio.Chromosome" />
      <property name="lis-fasta.includes" value="README.Tanjil.gnm1.Qq0N.yml,lupan.Tanjil.gnm1.Qq0N.genome_main.fna.gz" />
      <property name="src.data.dir" location="/data/v2/Lupinus/angustifolius/genomes/Tanjil.gnm1.Qq0N"/>
    </source>

    <!-- Lupinus/albus/annotations/Amiga.gnm1.ann1.3GKS -->
    <source name="Amiga.gnm1.ann1.3GKS" type="lis-annotation" dump="true">
      <property name="dataSetUrl" value="https://data.legumeinfo.org/Lupinus/albus/annotations/Amiga.gnm1.ann1.3GKS/" />
      <property name="src.data.dir" location="/data/v2/Lupinus/albus/annotations/Amiga.gnm1.ann1.3GKS"/>
    </source>
    <!-- Lupinus/angustifolius/annotations/Tanjil.gnm1.ann1.nnV9 -->
    <source name="Tanjil.gnm1.ann1.nnV9" type="lis-annotation" dump="true">
      <property name="dataSetUrl" value="https://data.legumeinfo.org/Lupinus/angustifolius/annotations/Tanjil.gnm1.ann1.nnV9/" />
      <property name="src.data.dir" location="/data/v2/Lupinus/angustifolius/annotations/Tanjil.gnm1.ann1.nnV9"/>
    </source>

    <!-- Lupinus/angustifolius/synteny/Tanjil.gnm1.syn.TwnC -->
    <source name="Tanjil.gnm1.syn.TwnC" type="lis-synteny" dump="true">
      <property name="dataSetUrl" value="https://data.legumeinfo.org/Lupinus/angustifolius/synteny/Tanjil.gnm1.syn.TwnC/" />
      <property name="src.data.dir" location="/data/v2/Lupinus/angustifolius/synteny/Tanjil.gnm1.syn.TwnC" />
    </source>
    
    <!-- ############### -->
    <!-- ONTOLOGIES ETC. -->
    <!-- ############### -->

    <!-- LIS gene families -->
    <source name="legume.genefam.fam1.M65K" type="lis-genefamily" dump="true">
      <property name="dataSetName" value="legume.genefam.fam1.M65K"/>
      <property name="dataSetUrl" value="https://data.legumeinfo.org/LEGUMES/Fabaceae/genefamilies/legume.genefam.fam1.M65K/" />
      <property name="dataSetDescription" value="LIS gene families"/>
      <property name="src.data.dir" location="/data/v2/LEGUMES/Fabaceae/genefamilies/legume.genefam.fam1.M65K"/>
    </source>

    <!-- LIS gene family trees -->
    <source name="legume.genefam.fam1.M65K.trees_ML_rooted" type="lis-phylotree" dump="true">
      <property name="dataSetName" value="legume.genefam.fam1.M65K.trees_ML_rooted"/>
      <property name="dataSetUrl" value="https://data.legumeinfo.org/LEGUMES/Fabaceae/genefamilies/legume.genefam.fam1.M65K/legume.genefam.fam1.M65K.trees_ML_rooted/" />
      <property name="dataSetDescription" value="LIS gene family phylogenetic trees"/>
      <property name="src.data.dir" location="/data/v2/LEGUMES/Fabaceae/genefamilies/legume.genefam.fam1.M65K/legume.genefam.fam1.M65K.trees_ML_rooted"/>
    </source>

    <!-- INTERPRO -->
    <source name="interpro" type="interpro">
      <property name="data.source.name" value="InterPro"/>
      <property name="data.source.description" value="XML file listing each InterPro entry."/>
      <property name="data.source.url" value="ftp://ftp.ebi.ac.uk/pub/databases/interpro/"/>
      <property name="src.data.dir" location="/data/InterPro/"/>
    </source>
    <source name="interpro-go" type="interpro-go">
      <property name="data.source.name" value="InterPro2GO"/>
      <property name="data.source.description" value="Mappings of InterPro entries to Gene Ontology (GO) terms."/>
      <property name="data.source.url" value="ftp://ftp.ebi.ac.uk/pub/databases/interpro/"/>
      <property name="src.data.dir" location="/data/InterPro/ontology/"/>
    </source>

    <!-- gene ontology -->
    <source name="go" type="go">
      <property name="src.data.file" location="/data/gene-ontology/go-basic.obo"/>
    </source>

    <!-- sequence ontology -->
    <source name="so" type="so">
      <property name="src.data.file" location="/data/SO-Ontologies/Ontology_Files/so-simple.obo"/>
    </source>

    <!-- plant ontology -->
    <source name="plant-ontology" type="obo">
      <property name="src.data.file" location="/data/plant-ontology/po.obo"/>
      <property name="ontology.prefix" value="PO"/>
      <property name="obo.ontology.name" value="Plant Ontology"/>
      <property name="obo.ontology.url" value="http://planteome.org/"/>
      <property name="obo.ontology.licence" value="https://creativecommons.org/licenses/by/4.0/"/>
      <property name="obo.ontology.description" value="The Plant Ontology (PO) is a community resource consisting of standardized terms, definitions, and logical relations describing plant structures and development stages, augmented by a large database of annotations from genomic and phenomic studies."/>
    </source>
    
    <!-- plant trait ontology -->
    <source name="plant-trait-ontology" type="obo">
      <property name="src.data.file" location="/data/plant-trait-ontology/to.obo"/>
      <property name="ontology.prefix" value="TO"/>
      <property name="obo.ontology.name" value="Plant Trait Ontology"/>
      <property name="obo.ontology.url" value="http://www.obofoundry.org/ontology/to.html"/>
      <property name="obo.ontology.licence" value="https://creativecommons.org/licenses/by/4.0/"/>
      <property name="obo.ontology.description" value="A controlled vocabulary of describe phenotypic traits in plants."/>
    </source>

    <!-- there is no lupin crop ontology -->

  </sources>

  <!-- ############### -->
  <!-- post-processing -->
  <!-- ############### -->

  <post-processing>
    <!-- IM CORE -->
    <post-process name="do-sources" />
    <post-process name="create-utr-references"/>
    <post-process name="create-references" />
    <post-process name="make-spanning-locations"/>
    <post-process name="create-chromosome-locations-and-lengths"/>
    <post-process name="create-intergenic-region-features"/>
    <post-process name="transfer-sequences"/>
    <post-process name="populate-child-features"/>
    <post-process name="create-gene-flanking-features"/>

    <!-- LIS -->
    <post-process name="lis-create-genefamilytally" />
    <post-process name="lis-populate-publications" />

    <!-- VIEWS AND INDEXES -->
    <post-process name="create-location-overlap-index"/>
    <post-process name="create-overlap-view" />
    <post-process name="create-attribute-indexes"/>
    <post-process name="summarise-objectstore"/>
    <post-process name="create-autocomplete-index"/>
    <post-process name="create-search-index"/>
  </post-processing>

</project>
